<controls:HighlightPopup
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.SS220.UserInterface.System.Chat.Controls">
    <PanelContainer StyleClasses="BorderedWindowPanel">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
            <TextEdit Name="TextEditWords" Access="Public" MinSize="220 100" Margin="10" HorizontalExpand="True" VerticalExpand="True"/>
            <Label Text="Используйте запятую для разделения слов" Access="Public" HorizontalAlignment="Right" StyleClasses="LabelSubText" Margin="0 0 2 2"/>
            <ColorSelectorSliders HorizontalExpand="True" Name="ColorForWords"/>
            <Button Name="ButtonNew" Access="Public" Text="Применить"/>
        </BoxContainer>
    </PanelContainer>
</controls:HighlightPopup>
